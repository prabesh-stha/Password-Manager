@using PasswordManager.Controllers;
@using PasswordManager.Models;
@model AppUser
<style>
        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
        }
        .profile-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .profile-header img {
            margin-bottom: 15px;
        }
        .profile-header h5 {
            margin-bottom: 5px;
        }
        .profile-header p {
            margin-bottom: 0;
        }
        .profile-info .row + .row {
            margin-top: 10px;
        }
    </style>
    <div class="container">
        <div class="profile-header">
            <img src="@Model.ImagePath" alt="@Model.Name" class="profile-img">
            <h5>@Model.Name</h5>
        </div>

<div class="d-flex justify-content-between align-items-center m-2">
    <h5 class="text-dark font-monospace mb-0">Password's List</h5>
    <a class="btn btn-primary rounded-pill" asp-action="Add" asp-controller="Weblist" asp-route-id="@Model.Id">Add New Password</a>
</div>
@if(Model.WebLists != null)
{
@foreach(var web in Model.WebLists)
{
    <div class="list-group mb-1">
  <a asp-action="Detail" asp-controller="Weblist" asp-route-id="@web.Id" class="list-group-item list-group-item-action">@web.Name</a>
</div>
}
}else{
    <p>No password available</p>
}

