@model List<AppUser>
@{
    ViewData["Title"] = "Home Page";
}

<h5 class="mb-5 text-dark font-monospace">User's List</h5>


@if (Model.Count > 0)
{
    <div class="container">
    <div class="row row-cols-1 row-cols-md-5 g-4">
        @foreach(var user in Model)
            {
                @* <a asp-action="Detail" asp-controller="Home" asp-route-id="@user.Id" class="text-decoration-none text-secondary font-monospace"> *@
                <div class="col">
                    <div class="card h-100">
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@user.Id" class="text-decoration-none text-secondary font-monospace">
                        <div class="bg-image">
                            <img src="@user.ImagePath"
                                    class="card-img-top" style="height: 200px;" />
                        </div>
                        </a>
                        <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Detail" asp-controller="Home" asp-route-id="@user.Id" class="text-decoration-none text-secondary">@user.Name</a>
                                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@user.Id"><i class="bi bi-pencil text-warning me-2"
                                            title="Edit"></i></a>
                                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@user.Id"><i class="bi bi-trash text-danger me-2"
                                    title="Edit"></i></a>
                                </div>
                                
                        </div>
                    </div>
                </div>
                @* </a> *@
            }
        </div>
    </div>

}
else
{
    <p>No results found.</p>
}
