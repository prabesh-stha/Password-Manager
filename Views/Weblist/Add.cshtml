@model WebList

@{
  ViewData["Title"] = "Create new password";
}
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">New Password</p>
                                <form asp-action="Add" asp-controller="Weblist" method="post" class="mx-1 mx-md-4">
                                    <input type="hidden" asp-for="Id">
                                    <div class="mb-4 d-flex align-items-center">
                                        <i class="bi bi-alphabet-uppercase me-3"></i>
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Title" />
                                    </div>
                                    <div class="mb-4 d-flex align-items-center">
                                        <i class="bi bi-globe me-3"></i>
                                        <input asp-for="Title" type="text" class="form-control" placeholder="Url/Phone" />
                                    </div>
                                    <div class="mb-4 d-flex align-items-center">
                                        <i class="bi bi-lock-fill me-3"></i>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                    </div>
                                    <div class="mb-4 d-flex align-items-center">
                                        <i class="bi bi-journal-text me-3"></i>
                                        <textarea asp-for="Note" class="form-control" placeholder="Add some note..." rows="3"></textarea>
                                    </div>
                                    <input type="hidden" asp-for="UserId" value="@ViewBag.UserId">
                                    <div class="d-flex justify-content-center mb-3">
                                        <button type="submit" class="btn btn-outline-primary btn-lg">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
